<% title(@user.name, "Users") %>
<h2><%= @user.name %></h2>
<h2><%= @user.email %></h2>
<h2><%= @user.phone %></h2>

<%= link_to "Edit User", edit_user_path(@user) %>
<%= link_to "Delete User",
            user_path(@user),
            :method => :delete,
            :confirm => "Are you sure you want to delete this project?" %>
